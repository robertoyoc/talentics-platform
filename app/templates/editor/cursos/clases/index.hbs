{{#link-to  'editor.cursos.index'}}<button>Regresar a cursos</button>{{/link-to}}
<br>
{{model.nombre}}
<br>
{{#link-to 'editor.cursos.clases.nuevo' model.id}}
	<button>Nueva clase</button>
{{/link-to}}
<table>
	<tr>
		<th>Nombre</th>
		<th>Acciones</th>
	</tr>
	{{#each model.clases as |clase|}}
		<tr>
			<td>{{clase.name}}</td>
			<td>
				{{#link-to 'editor.cursos.clases.editar' clase}}<button>Editar</button>{{/link-to}}
				<button {{action "borrar" clase}}>Borrar</button>
			</td>
		</tr>
		{{else}}
			<h2>No hay clases asignadas a este curso</h2>
	{{/each}}
</table>